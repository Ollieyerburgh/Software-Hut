%h1 Listing preferences

%table.table
  %thead
    %tr
      %th Subject Name
      %th Theme Name
      %th Delivery Method
      %th

  %tbody
    - @preferences.each do |preference|
      %tr
        %td= preference.subject.name
        %td= preference.theme_id
        %td= preference.delivery_id
        %td= link_to 'Show',preference
        %td= link_to 'Edit', edit_preference_path(preference)
        %td= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' }

%br


= link_to 'New Preference', new_preference_path
