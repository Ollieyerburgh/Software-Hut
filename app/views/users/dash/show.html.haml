.container
  .generic-container
    %div.nav
      %ul.nav.nav-pills
        %li.nav-item
          = link_to "Dashboard", users_dash_index_path(@user), class: "dashboard-btn"




  %h1  Pending activities
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th.col Title
        %th.col Description
        %th.col Deadline
        %th.col URL
        %th.col Postcode
    %tbody
      - @pendingactivities.each do |activity|
        %tr
          %td= activity.title
          %td= activity.description
          %td= activity.deadline
          %td= activity.link
          %td= activity.postcode

