= simple_form_for(@resource) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, label: 'Title'
    = f.input :description, label: 'Resource description'
    = f.input :email, label: 'Email', placeholder: 'YourEmail@here.com'

  .form-file_field
    = f.input :file, as: :file, name: 'files'
    = f.hidden_field :file_cache
    = f.input :terms_of_service, as: :boolean, inline_label: "I agree that I have permission to post this resource on this website"

    %p This submission will need to be approved by the website admins prior to being posted.

  .form-actions
    = f.button :submit
