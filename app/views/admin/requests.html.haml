
.popular-events-container
  .popular-events-inner-container
    .populartext
      %h1  Pending Requests
      %table
        %tbody
          - @events.each do |event|
            %tr
              %td.event-date= event.deadlinedate
              %td.event-title= event.name
              %td.event-description= event.description
              %td.event-likes
                = button_to 'Approve', {:controller => 'admin', :action => 'approve', :id => event.id}
                = button_to 'Reject', {:controller => 'admin', :action => 'reject', :id => event.id}


%br
