
.popular-activities-container
  .popular-activities-inner-container
    .populartext
      %h1 Reject

      .form.container
        = simple_form_for(@activity) do |f|
          = f.error_notification

          .form-inputs
            = f.input :email, label: 'email'
            = f.input :subject, label: 'subject'
            = f.input :description, label: 'description', :disabled=> true
          

          .form-actions
            = f.button :submit

\|
= link_to 'Back', admin_users_path
