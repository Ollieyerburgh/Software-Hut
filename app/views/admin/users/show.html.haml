.container
  %h1 User Manage
  Manage user accounts.
  %h2  Modify Users
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th.col #
        %th.col First name
        %th.col Last name
        %th.col Email
        %th.col Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.id
          %td= user.forename
          %td= user.surname
          %td= user.email
          %td
            = link_to 'Edit', edit_admin_user_path(user.id), class:'btn btn-default'
            = link_to 'Delete', admin_user_path(user.id), method: :delete, class:'btn btn-danger', data: {confirm: "Are you sure?"}



  %br
  %h2  Displaying Admins
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th.col #
        %th.col Email

    %tbody
      - @admins.each do |admin|
        %tr
          %td= admin.id
          %td= admin.email
