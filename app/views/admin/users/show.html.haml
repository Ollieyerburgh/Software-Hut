.container
  %h1  Modify users
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th.col #
        %th.col First name
        %th.col Last name
        %th.col Email
        %th.col Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= user.id
          %td= user.forename
          %td= user.surname
          %td= user.email
          %td
            = link_to 'Edit', edit_admin_user_path(user.id), class:'btn btn-default'
            = link_to 'Delete', admin_user_path(user.id), method: :delete, class:'btn btn-danger'








